{
    "name": "nestjs-config-service",
    "description": "Provides server-side and client-side support for external configuration in a distributed system. With Config Server, you have a centralized location to manage external application properties across all environments.",
    "license": "MIT",
    "author": "Serhii Pomazan <sergeypomazan2005@gmail.com>",
    "version": "0.0.1",
    "main": "./dist/index.js",
    "homepage": "https://github.com/yoonost/nestjs-config-service#readme",
    "bugs": {
        "url": "https://github.com/yoonost/nestjs-config-service/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yoonost/nestjs-config-service.git"
    },
    "scripts": {
        "build": "rimraf -rf dist && tsc -p tsconfig.json",
        "format": "prettier --write \"lib/**/*.ts\"",
        "lint": "eslint \"lib/**/*.ts\" --fix",
        "test": "jest"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.0",
        "@nestjs/config": "^4.0.2",
        "axios": "^1.11.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "fs": "^0.0.1-security"
    },
    "devDependencies": {
        "@nestjs/testing": "^11.0.1",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@types/node": "^24.2.0",
        "@types/jest": "^30.0.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^30.0.0",
        "ts-jest": "^29.2.5",
        "rimraf": "^6.0.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [ "js", "json", "ts" ],
        "rootDir": "lib",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": { "^.+\\.(t|j)s$": "ts-jest" },
        "collectCoverageFrom": [ "**/*.(t|j)s" ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
